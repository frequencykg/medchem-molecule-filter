[MASTER]
ignore=CVS,.git,__pycache__,.pytest_cache
jobs=1
persistent=yes
suggestion-mode=yes

[MESSAGES CONTROL]
disable=
    C0111,  # missing-docstring
    C0103,  # invalid-name
    R0903,  # too-few-public-methods
    R0913,  # too-many-arguments
    R0914,  # too-many-locals
    W0212,  # protected-access
    C0301,  # line-too-long (handled by black)

[REPORTS]
output-format=text
reports=no
score=yes

[BASIC]
good-names=i,j,k,ex,mol,_,id

[FORMAT]
max-line-length=100
indent-string='    '

[DESIGN]
max-args=7
max-attributes=10
max-bool-expr=5
max-branches=12
max-locals=15
max-parents=7
max-public-methods=20
max-returns=6
max-statements=50
min-public-methods=0

[IMPORTS]
known-third-party=rdkit,pytest,numpy

[SIMILARITIES]
min-similarity-lines=10
